{
  "compilerOptions": {
    "pretty": true,
    "lib": ["esnext"],
    "target": "es5",
    "module": "commonjs",
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": false,

    "skipLibCheck": true,

    "strict": true,
    "preserveConstEnums": true,

    "outDir": "build",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
